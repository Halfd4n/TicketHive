@using Blazored.LocalStorage;
@using TicketHive.Client.Services;
@using TicketHive.Shared.Models;
@inject IEventService _service
@inject ILocalStorageService localStorage
@page "/Cart"

<div class="ContainerForCart">
    
    @if(ShoppingCart.Count >= 1)
    {
        
    <div class="row justify-content-center align-items-center">
        <h4><i class="fa-solid fa-cart-shopping me-2"></i>Shopping cart:</h4>
        <table class="table border border-2 border-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Event</th>
                    <th scope="col">Tickets</th>
                    <th scope="col">Price</th>
                    <th scope="col">Total cost</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            @foreach(var eventModel in ShoppingCart)
            {
                <tr>
                    <th scope="row">@eventModel.Id</th>
                    <td>@eventModel.Name</td>
                    <td>@eventModel.NumberOfTickets</td>
                    <td>@eventModel.Price</td>
                    <td>@(eventModel.Price * eventModel.NumberOfTickets)</td>
                    <td><button @onclick="() => RemoveEvent(eventModel)"><i class="fa-solid fa-trash text-danger"></i></button></td>
                </tr>
            }
            </tbody>
        </table>
        </div>
    }
    else
    {
        <div><h5>Currently no events in the shopping cart <i class="fa-solid fa-face-frown"></i>...</h5></div>
    }
</div>
